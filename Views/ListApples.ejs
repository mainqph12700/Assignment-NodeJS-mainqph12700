    <div class="body">
        <div class="title">
            <hr>
            <br>
            <div class="row" style="text-align:center;">
                <div class="col-md-6">
                    <h3 style="border-right: 1px solid black"><a href="ListApples" style="font-weight: bold">Thêm Sản Phẩm Mới</a></h3>
                </div>
                <div class="col-md-6">
                    <h3 style="border-right: 1px solid black"><a
                                href="ListApples" style="font-weight: bold">Danh sách sản phẩm</a></h3>
                </div>
            </div>
            <hr>
        </div>
        <div class="form-input-products" style="margin-left:9%">
            <div class="row">
                <div class="col-md-6">
                    <div class="formAdd">
                        <form action="./ListApples" method="POST" enctype="multipart/form-data">
                            <label for="" style="margin-right: 108px">Tên: </label>
                            <input type="text" name="txtNameApple" placeholder="..." required minlength="3"/>
                            <br/>
                            <label for="" style="margin-right: 108px">Ảnh: </label>
                            <input type="file" name="AppleImage"/>
                            <br/>
                            <label for="" style="margin-right: 80px">Giá bán: </label>
                            <input type="text" name="txtPricesApple" placeholder="..." required minlength="3"/>
                            <br/>
                            <label for="" style="margin-right: 80px">Ghi chú: </label>
                            <textarea type="text" name="txtNoteApple" placeholder="..." rows="2" cols="40"></textarea>
                            <br/>
                            <input id="btnAddNewApple" type="submit" value="Add"/>
                        </form>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="ApplesList">
                        <% list.forEach(function(apple){ %>
                            <div class="character">
                                <div class="row">
                                    <div class="col-md-3">
                                        <img src="./Upload Images/<%- apple.ImageApple %>" alt="err"/>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="appleName" style="font-weight: bold; margin-left: 10px">
                                            <%- apple.NameApple %>
                                        </div>
                                        <div class="appleNote"
                                             style="margin-left: 10px; font-size: 16px; margin-top: 10px; overflow: hidden">
                                            <p><%- apple.NotesApple %></p>
                                        </div>
                                    </div>
                                    <br>
                                    <div class="col-md-3" style="text-align: left; border-left: solid 1px gray">
                                        <div class="applePrices" style="color: green; font-weight: bold">
                                            $ <%- apple.PricesApple %>
                                        </div>
                                        <div class="Button">
                                            <a onClick="return confirm('Are you sure delete <%- apple.NameApple %> ?')"
                                               href="./delete/<%- apple._id %>">Xóa</a>
                                            <br>
                                            <a href="./edit/<%- apple._id %>"
                                               style="background-color: aliceblue; color: black">Sửa</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                </div>
            </div>
        </div>
        <hr>
